{
  "manifest_version": 2,

  "name": "Youtube compilation helper",
  "description": "Youtube Compilation Helper provides useful functionalities when watching music compilation/album videos on Youtube.",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Youtube Compilation Helper"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "background"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*"],
      "js": ["js/contentScript.js"]
    }
  ]
}